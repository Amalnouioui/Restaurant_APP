<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Restaurant APP!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">üçΩÔ∏è Restaurant APP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            {# Admin Menu - Only Users, Dishes, Orders #}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">
                                    <i class="bi bi-people"></i> Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_plat_index') }}">
                                    <i class="bi bi-egg-fried"></i> Dishes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_commande_index') }}">
                                    <i class="bi bi-receipt"></i> Orders
                                </a>
                            </li>
                            {% endif %}
                            
                            {# Staff Menu - Only Orders (filtered by role) #}
                            {% if (is_granted('ROLE_CASHIER') or is_granted('ROLE_CHEF') or is_granted('ROLE_WAITER')) and not is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_commande_index') }}">
                                    <i class="bi bi-receipt"></i> 
                                    {% if is_granted('ROLE_CASHIER') %}
                                        Pending Orders
                                    {% elseif is_granted('ROLE_CHEF') %}
                                        Kitchen Orders
                                    {% elseif is_granted('ROLE_WAITER') %}
                                        Ready Orders
                                    {% endif %}
                                </a>
                            </li>
                            {% endif %}
                            
                            {# Client Menu - Only Menu, My Orders, Cart #}
                            {% if is_granted('ROLE_CLIENT') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_CASHIER') and not is_granted('ROLE_CHEF') and not is_granted('ROLE_WAITER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_customer_menu') }}">
                                    <i class="bi bi-book"></i> Menu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_customer_order_list') }}">
                                    <i class="bi bi-list-check"></i> My Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_customer_cart_view') }}">
                                    <i class="bi bi-cart"></i> Cart
                                </a>
                            </li>
                            {% endif %}
                            
                            {# User Dropdown #}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> {{ app.user.fullName }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a></li>
                                </ul>
                            </li>
                        {% else %}
                            {# Guest Menu - Show menu link only if not on login/register pages #}
                            {% set currentRoute = app.request.attributes.get('_route') %}
                            {% if currentRoute not in ['app_login', 'app_register'] %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_customer_menu') }}">
                                    <i class="bi bi-book"></i> Menu
                                </a>
                            </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>

        <footer class="bg-dark text-white text-center py-4 mt-5">
            <p>&copy; 2026 Restaurant APP. All rights reserved.</p>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
        <script>
            // Initialize Bootstrap tooltips
            document.addEventListener('DOMContentLoaded', function() {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            });
        </script>
    </body>
</html>
