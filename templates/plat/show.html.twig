{% extends 'base.html.twig' %}

{% block title %}{{ plat.nomPlat }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">{{ plat.nomPlat }}</h2>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="text-muted">Price</h5>
                        <h3 class="text-success">${{ plat.prix }}</h3>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-muted">ID</h5>
                        <p class="lead">{{ plat.id }}</p>
                    </div>
                </div>
                
                <hr>
                
                <h5 class="text-muted">Description</h5>
                <p class="lead">{{ plat.description }}</p>
            </div>
            <div class="card-footer bg-light">
                <a href="{{ path('app_plat_edit', {'id': plat.id}) }}" class="btn btn-warning">
                    ‚úèÔ∏è Edit
                </a>
                <a href="{{ path('app_plat_index') }}" class="btn btn-secondary">
                    ‚Üê Back to Dishes
                </a>
                <button class="btn btn-danger float-end" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    üóëÔ∏è Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">‚ö†Ô∏è Delete Dish</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>{{ plat.nomPlat }}</strong>?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('app_plat_delete', {'id': plat.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
