{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_label(form.nomPlat, 'Dish Name', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nomPlat, {'attr': {'class': 'form-control', 'placeholder': 'Enter dish name'}}) }}
        {% if form.nomPlat.vars.errors %}
            <div class="invalid-feedback d-block">
                {% for error in form.nomPlat.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter dish description', 'rows': '5'}}) }}
        {% if form.description.vars.errors %}
            <div class="invalid-feedback d-block">
                {% for error in form.description.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="mb-3">
        {{ form_label(form.prix, 'Price', {'label_attr': {'class': 'form-label'}}) }}
        <div class="input-group">
            <span class="input-group-text">$</span>
            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': '0.00', 'step': '0.01'}}) }}
        </div>
        {% if form.prix.vars.errors %}
            <div class="invalid-feedback d-block">
                {% for error in form.prix.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Save Dish') }}
        </button>
    </div>
{{ form_end(form) }}
