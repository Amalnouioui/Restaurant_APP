{% block stylesheets %}
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .orders-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .orders-header h1 {
        font-size: 3.5rem;
        color: #333;
        margin: 0;
        font-weight: 800;
    }

    .orders-header p {
        font-size: 1.1rem;
        color: #666;
        margin-top: 10px;
    }

    .orders-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .order-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 3px solid transparent;
    }

    .order-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.2);
        border-color: #667eea;
    }

    .order-header {
        padding: 25px;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .order-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.1), rgba(0,0,0,0.2));
    }

    .order-header.pending {
        background: linear-gradient(135deg, #FF6B6B, #FF5252);
    }

    .order-header.confirmed {
        background: linear-gradient(135deg, #FFD93D, #FFC700);
    }

    .order-header.preparing {
        background: linear-gradient(135deg, #6BCF7F, #52B788);
    }

    .order-header.ready {
        background: linear-gradient(135deg, #4D96FF, #1E88E5);
    }

    .order-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-id-section h3 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .order-id-section small {
        display: block;
        font-size: 0.9rem;
        opacity: 0.9;
        margin-top: 5px;
    }

    .status-badge {
        font-size: 0.85rem;
        padding: 10px 20px !important;
        border-radius: 50px;
        font-weight: 600;
        display: inline-block;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
    }

    .order-items {
        padding: 25px;
    }

    .item-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 20px;
    }

    .dish-box {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 12px;
        overflow: hidden;
        padding: 12px;
        text-align: center;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .dish-box:hover {
        transform: scale(1.05);
        border-color: #667eea;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .dish-image {
        width: 100%;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 8px;
        background: #e0e0e0;
    }

    .dish-name {
        font-size: 0.85rem;
        font-weight: 700;
        color: #333;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .dish-qty {
        font-size: 0.75rem;
        color: #666;
        margin-top: 4px;
    }

    .order-summary {
        background: #f8f9fa;
        padding: 20px 25px;
        border-top: 2px solid #e9ecef;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        font-size: 0.95rem;
    }

    .summary-row:last-child {
        margin-bottom: 0;
    }

    .summary-row.total {
        border-top: 2px solid #e9ecef;
        padding-top: 12px;
        font-size: 1.3rem;
        font-weight: 700;
        color: #667eea;
    }

    .order-footer {
        padding: 20px 25px;
        display: flex;
        gap: 12px;
    }

    .btn-action {
        flex: 1;
        padding: 12px 20px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        display: inline-block;
    }

    .btn-details {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .btn-details:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }

    .btn-reorder {
        background: linear-gradient(135deg, #f093fb, #f5576c);
        color: white;
    }

    .btn-reorder:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(245, 87, 108, 0.4);
    }

    .no-orders {
        text-align: center;
        background: white;
        padding: 60px 40px;
        border-radius: 20px;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
    }

    .no-orders h2 {
        color: #333;
        font-size: 2rem;
        margin-bottom: 15px;
    }

    .no-orders p {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    .progress-section {
        padding: 20px 25px;
        background: #f8f9fa;
        border-top: 2px solid #e9ecef;
    }

    .progress-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 8px;
    }

    .progress-bar-custom {
        height: 8px;
        background: #e9ecef;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        border-radius: 10px;
        transition: width 0.5s ease;
    }

    .progress-fill.pending {
        width: 25%;
        background: linear-gradient(90deg, #FF6B6B, #FF5252);
    }

    .progress-fill.confirmed {
        width: 50%;
        background: linear-gradient(90deg, #FFD93D, #FFC700);
    }

    .progress-fill.preparing {
        width: 75%;
        background: linear-gradient(90deg, #6BCF7F, #52B788);
    }

    .progress-fill.ready {
        width: 100%;
        background: linear-gradient(90deg, #4D96FF, #1E88E5);
    }

    .modal-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 15px 30px;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .back-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        .orders-header h1 {
            font-size: 2.5rem;
        }

        .orders-container {
            grid-template-columns: 1fr;
        }

        .item-grid {
            grid-template-columns: 1fr 1fr 1fr;
        }

        .order-footer {
            flex-direction: column;
        }
    }
</style>
{% endblock %}

