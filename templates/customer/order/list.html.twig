<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-refresh order statuses every 3 seconds
    setInterval(function() {
        fetch('{{ path('app_customer_api_orders') }}')
            .then(response => response.json())
            .then(data => {
                updateOrderStatuses(data.orders);
            })
            .catch(error => console.error('Error fetching orders:', error));
    }, 3000);

    function updateOrderStatuses(orders) {
        orders.forEach(order => {
            const orderCard = document.querySelector(`[data-order-id="${order.id}"]`);
            if (orderCard) {
                // Update status badge and header
                const statusBadge = orderCard.querySelector('.status-badge');
                const orderHeader = orderCard.querySelector('.order-header');
                const progressFill = orderCard.querySelector('.progress-fill');
                
                if (statusBadge) {
                    statusBadge.textContent = getStatusLabel(order.status);
                }

                // Update header and progress bar colors
                const statusClasses = ['pending', 'confirmed', 'preparing', 'ready'];
                statusClasses.forEach(cls => {
                    orderHeader?.classList.remove(cls);
                    progressFill?.classList.remove(cls);
                });

                const statusClass = getStatusClass(order.status);
                orderHeader?.classList.add(statusClass);
                progressFill?.classList.add(statusClass);
            }
        });
    }

    function getStatusLabel(status) {
        const labels = {
            'pending': '‚è≥ Pending',
            'Order Confirmed': '‚úì Confirmed',
            'Preparing': 'üë®‚Äçüç≥ Preparing',
            'Ready for Delivery': 'üì¶ Ready'
        };
        return labels[status] || status;
    }

    function getStatusClass(status) {
        const classes = {
            'pending': 'pending',
            'Order Confirmed': 'confirmed',
            'Preparing': 'preparing',
            'Ready for Delivery': 'ready'
        };
        return classes[status] || 'pending';
    }
});
</script>

