{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
<div class="container py-4">
    <h1>ðŸ“¦ My Orders</h1>
    <p class="text-muted">View your order history</p>

    {% if commandes is empty %}
        <div class="alert alert-info text-center py-5">
            <h4>No Orders Yet</h4>
            <p>You haven't placed any orders yet.</p>
            <a href="{{ path('app_customer_menu') }}" class="btn btn-primary">Browse Menu</a>
        </div>
    {% else %}
        <div class="row">
            {% for commande in commandes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <strong>Order #{{ commande.id }}</strong>
                            {% if commande.statut == 'CONFIRMED' %}
                                <span class="badge bg-success">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'IN_PROGRESS' %}
                                <span class="badge bg-warning">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'READY' %}
                                <span class="badge bg-info">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'SERVED' %}
                                <span class="badge bg-secondary">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'CANCELLED' %}
                                <span class="badge bg-danger">{{ commande.statut }}</span>
                            {% else %}
                                <span class="badge bg-warning">{{ commande.statut }}</span>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> {{ commande.dateHeure|date('M d, Y - H:i') }}
                                </small>
                            </p>
                            
                            <div class="mb-3">
                                <strong>Items:</strong>
                                <ul class="list-unstyled mb-0 mt-2">
                                    {% for ligne in commande.ligneCommandes|slice(0, 3) %}
                                        <li class="small">
                                            <span class="badge bg-light text-dark">{{ ligne.quantite }}x</span>
                                            {{ ligne.plat.nomPlat }}
                                        </li>
                                    {% endfor %}
                                    {% if commande.ligneCommandes|length > 3 %}
                                        <li class="small text-muted">+ {{ commande.ligneCommandes|length - 3 }} more items...</li>
                                    {% endif %}
                                </ul>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span><strong>Total:</strong></span>
                                <span class="text-success fs-5"><strong>${{ commande.total|number_format(2, '.', ',') }}</strong></span>
                            </div>

                            <div class="mb-2">
                                <small>
                                    <strong>Payment:</strong> 
                                    {% if commande.paymentMethod == 'CARD' %}
                                        ðŸ’³ Card
                                    {% else %}
                                        ðŸ’µ Cash
                                    {% endif %}
                                    <span class="badge bg-{{ commande.paymentStatus == 'PAID' ? 'success' : 'warning' }}">
                                        {{ commande.paymentStatus }}
                                    </span>
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <a href="{{ path('app_customer_order_show', {id: commande.id}) }}" class="btn btn-sm btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
