{% extends 'base.html.twig' %}

{% block title %}Shopping Cart - Restaurant{% endblock %}

{% block body %}
<div class="container py-4">
    <h1>üõí Shopping Cart</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Cart Items</h5>
                </div>
                {% if cartItems is empty %}
                    <div class="card-body text-center py-5">
                        <h4 class="text-muted">Your cart is empty</h4>
                        <p>Add some delicious dishes from our menu!</p>
                        <a href="{{ path('app_customer_menu') }}" class="btn btn-primary">Browse Menu</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cartItems %}
                                    <tr>
                                        <td>
                                            <strong>{{ item.plat.nomPlat }}</strong>
                                            <br><small class="text-muted">{{ item.plat.description }}</small>
                                        </td>
                                        <td>${{ item.plat.prix|number_format(2, '.', ',') }}</td>
                                        <td>
                                            <form method="post" action="{{ path('app_customer_cart_update', {'platId': item.plat.id}) }}" class="d-inline">
                                                <input type="number" name="quantity" class="form-control form-control-sm" value="{{ item.quantity }}" min="1" style="width: 70px;" onchange="this.form.submit()">
                                            </form>
                                        </td>
                                        <td><strong>${{ item.subtotal|number_format(2, '.', ',') }}</strong></td>
                                        <td>
                                            <a href="{{ path('app_customer_cart_remove', {'platId': item.plat.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Remove this item?')">üóëÔ∏è</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>

            <div>
                <a href="{{ path('app_customer_menu') }}" class="btn btn-secondary">‚Üê Continue Shopping</a>
            </div>
        </div>

        {% if cartItems is not empty %}
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>${{ total|number_format(2, '.', ',') }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (10%):</span>
                            <span>${{ (total * 0.10)|number_format(2, '.', ',') }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery:</span>
                            <span>$5.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fs-5">
                            <strong>Total:</strong>
                            <strong class="text-success">${{ (total + (total * 0.10) + 5.00)|number_format(2, '.', ',') }}</strong>
                        </div>

                        <a href="{{ path('app_customer_cart_checkout') }}" class="btn btn-success btn-lg w-100 mt-3">
                            üõçÔ∏è Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
