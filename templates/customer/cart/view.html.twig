{% extends 'base.html.twig' %}

{% block title %}Shopping Cart - Restaurant{% endblock %}

{% block body %}
<div class="container py-4">
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-cart" type="button" role="tab" aria-controls="pending-cart" aria-selected="true">
                Pending Cart
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab" aria-controls="orders" aria-selected="false">
                My Orders
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Pending Cart Tab -->
        <div class="tab-pane fade show active" id="pending-cart" role="tabpanel" aria-labelledby="pending-tab">
            <h2>Pending Cart</h2>
            
            {% if cart is empty %}
                <div class="alert alert-info">
                    Your cart is empty!
                    <a href="{{ path('app_customer_menu') }}" class="btn btn-primary ms-2">Back to Menu</a>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Cart Items</h5>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Item</th>
                                            <th>Price</th>
                                            <th>Qty</th>
                                            <th>Subtotal</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% set total = 0 %}
                                        {% for platId, item in cart %}
                                            {% set subtotal = item.price * item.quantity %}
                                            {% set total = total + subtotal %}
                                            <tr>
                                                <td>
                                                    <strong>{{ item.name }}</strong>
                                                </td>
                                                <td>€{{ item.price|number_format(2, '.', ',') }}</td>
                                                <td>
                                                    <input type="number" class="form-control form-control-sm qty-input" value="{{ item.quantity }}" min="1" data-plat-id="{{ platId }}" style="width: 70px;">
                                                </td>
                                                <td><strong>€{{ subtotal|number_format(2, '.', ',') }}</strong></td>
                                                <td>
                                                    <button class="btn btn-sm btn-danger remove-item" data-plat-id="{{ platId }}">Remove</button>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div>
                            <a href="{{ path('app_customer_menu') }}" class="btn btn-secondary">← Continue Shopping</a>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card shadow-sm sticky-top" style="top: 20px;">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span id="subtotal">€{{ total|number_format(2, '.', ',') }}</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fs-5">
                                    <strong>Total:</strong>
                                    <strong class="text-success" id="total">€{{ total|number_format(2, '.', ',') }}</strong>
                                </div>

                                <button class="btn btn-success btn-lg w-100 mt-3" id="checkout-btn">
                                    Proceed to Checkout
                                </button>

                                <a href="{{ path('app_customer_menu') }}" class="btn btn-outline-secondary btn-lg w-100 mt-2">
                                    Back to Menu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Orders Tab -->
        <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
            <h2>My Orders <span class="badge bg-info" id="refresh-indicator" style="display:none;">Refreshing...</span></h2>
            
            <div id="orders-container">
                {% if commandes is empty %}
                    <div class="alert alert-info">
                        You haven't placed any orders yet.
                        <a href="{{ path('app_customer_menu') }}" class="btn btn-primary ms-2">Go to Menu</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Items</th>
                                </tr>
                            </thead>
                            <tbody id="orders-tbody">
                                {% for commande in commandes %}
                                    <tr class="order-row" data-order-id="{{ commande.id }}">
                                        <td><strong>#{{ commande.id }}</strong></td>
                                        <td>{{ commande.dateHeure|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <span class="status-badge" data-status="{{ commande.statut }}">
                                                {% if commande.statut == 'pending' %}
                                                    <span class="badge bg-danger">Pending</span>
                                                {% elseif commande.statut == 'Order Confirmed' %}
                                                    <span class="badge bg-warning text-dark">Order Confirmed</span>
                                                {% elseif commande.statut == 'Preparing' %}
                                                    <span class="badge bg-success">Preparing</span>
                                                {% elseif commande.statut == 'Ready for Delivery' %}
                                                    <span class="badge bg-info">Ready for Delivery</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ commande.statut }}</span>
                                                {% endif %}
                                            </span>
                                        </td>
                                        <td><strong>€{{ commande.total|number_format(2, '.', ',') }}</strong></td>
                                        <td>
                                            <button class="btn btn-sm btn-info view-items-btn" data-order-id="{{ commande.id }}">
                                                View Items
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Modals container -->
                    <div id="modals-container">
                        {% for commande in commandes %}
                            <!-- Modal for order details -->
                            <div class="modal fade" id="orderModal{{ commande.id }}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Order #{{ commande.id }} Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Dish</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Subtotal</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for ligneCommande in commande.ligneCommandes %}
                                                        <tr>
                                                            <td>{{ ligneCommande.plat.nomPlat }}</td>
                                                            <td>€{{ ligneCommande.plat.prix|number_format(2, '.', ',') }}</td>
                                                            <td>{{ ligneCommande.quantite }}</td>
                                                            <td>€{{ (ligneCommande.plat.prix * ligneCommande.quantite)|number_format(2, '.', ',') }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="modal-footer">
                                            <strong>Total: €{{ commande.total|number_format(2, '.', ',') }}</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const removeButtons = document.querySelectorAll('.remove-item');
    const checkoutBtn = document.getElementById('checkout-btn');
    const ordersContainer = document.getElementById('orders-container');

    removeButtons.forEach(button => {
        button.addEventListener('click', function() {
            const platId = this.dataset.platId;
            const row = this.closest('tr');
            row.remove();
            
            // Recalculate total
            updateTotal();
        });
    });

    if (checkoutBtn) {
        checkoutBtn.addEventListener('click', function() {
            fetch('{{ path('app_customer_checkout') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Order created successfully! Order ID: ' + data.commandeId);
                    window.location.reload();
                } else {
                    alert('Error: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error creating order');
            });
        });
    }

    // Auto-refresh orders every 3 seconds from API
    setInterval(function() {
        refreshOrders();
    }, 3000);

    function refreshOrders() {
        if (document.getElementById('orders').classList.contains('active')) {
            fetch('{{ path('app_customer_api_orders') }}')
                .then(response => response.json())
                .then(data => {
                    updateOrdersUI(data.orders);
                })
                .catch(error => console.error('Error fetching orders:', error));
        }
    }

    function updateOrdersUI(orders) {
        const tbody = document.getElementById('orders-tbody');
        if (!tbody) return;

        orders.forEach(order => {
            const row = document.querySelector(`tr.order-row[data-order-id="${order.id}"]`);
            if (row) {
                // Update status badge
                const statusBadge = row.querySelector('.status-badge');
                const newBadgeHTML = getStatusBadgeHTML(order.status);
                statusBadge.innerHTML = newBadgeHTML;
            }
        });
    }

    function getStatusBadgeHTML(status) {
        const statusMap = {
            'pending': '<span class="badge bg-danger">Pending</span>',
            'Order Confirmed': '<span class="badge bg-warning text-dark">Order Confirmed</span>',
            'Preparing': '<span class="badge bg-success">Preparing</span>',
            'Ready for Delivery': '<span class="badge bg-info">Ready for Delivery</span>'
        };
        return statusMap[status] || `<span class="badge bg-secondary">${status}</span>`;
    }

    // Add event listener for view items buttons
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('view-items-btn')) {
            const orderId = e.target.dataset.orderId;
            const modal = document.getElementById('orderModal' + orderId);
            if (modal) {
                const bsModal = new bootstrap.Modal(modal);
                bsModal.show();
            }
        }
    });

    function updateTotal() {
        let total = 0;
        document.querySelectorAll('#pending-cart tbody tr').forEach(row => {
            const priceText = row.cells[1].textContent.replace('€', '').replace(',', '.');
            const qty = parseInt(row.cells[2].querySelector('input').value) || 0;
            total += parseFloat(priceText) * qty;
        });
        
        const formattedTotal = total.toFixed(2).replace('.', ',');
        document.getElementById('subtotal').textContent = '€' + formattedTotal;
        document.getElementById('total').textContent = '€' + formattedTotal;
    }
});
</script>

<style>
.nav-tabs .nav-link.active {
    border-bottom: 3px solid #0d6efd;
}

.table-hover tbody tr:hover {
    background-color: #f5f5f5;
}

.status-update-indicator {
    animation: pulse 1s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}
</style>
{% endblock %}

