{% extends 'base.html.twig' %}

{% block title %}Menu - Restaurant{% endblock %}

{% block body %}
<div class="container py-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row mb-4">
        <div class="col-md-8">
            <h1>üçΩÔ∏è Our Menu</h1>
            <p class="text-muted">Choose your favorite dishes</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_customer_cart_view') }}" class="btn btn-primary">
                üõí View Cart <span class="badge bg-success">{{ cartCount }}</span>
            </a>
        </div>
    </div>

    <div class="row" id="menu-items">
        {% if plats is empty %}
            <div class="col-12">
                <div class="alert alert-info">
                    No dishes available yet. Please check back later!
                </div>
            </div>
        {% else %}
            {% for plat in plats %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ plat.nomPlat }}</h5>
                            <p class="card-text text-muted">{{ plat.description }}</p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-warning text-dark fs-6">${{ plat.prix|number_format(2, '.', ',') }}</span>
                            </div>
                            <form method="post" action="{{ path('app_customer_cart_add', {'platId': plat.id}) }}">
                                <input type="number" name="quantity" class="form-control form-control-sm mb-2" placeholder="Qty" value="1" min="1">
                                <button type="submit" class="btn btn-success btn-sm w-100">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
