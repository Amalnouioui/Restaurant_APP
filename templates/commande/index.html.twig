{% extends 'base.html.twig' %}

{% block title %}Order Management - Kitchen{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üç≥ Kitchen - Order Management</h1>
        <a href="{{ path('app_commande_new') }}" class="btn btn-success">+ New Order</a>
    </div>

    {# Filters #}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">üîç Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="PENDING" {{ current_status == 'PENDING' ? 'selected' : '' }}>‚è≥ PENDING</option>
                        <option value="CONFIRMED" {{ current_status == 'CONFIRMED' ? 'selected' : '' }}>‚úì CONFIRMED</option>
                        <option value="IN_PROGRESS" {{ current_status == 'IN_PROGRESS' ? 'selected' : '' }}>üç≥ IN_PROGRESS</option>
                        <option value="READY" {{ current_status == 'READY' ? 'selected' : '' }}>‚úì READY</option>
                        <option value="SERVED" {{ current_status == 'SERVED' ? 'selected' : '' }}>üçΩÔ∏è SERVED</option>
                        <option value="CANCELLED" {{ current_status == 'CANCELLED' ? 'selected' : '' }}>‚ùå CANCELLED</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Order Number</label>
                    <input type="number" name="order_number" class="form-control" placeholder="#123" value="{{ current_order_number }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" name="date" class="form-control" value="{{ current_date }}">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Apply</button>
                    <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    {# Orders Table #}
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Orders ({{ commandes|length }})</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Date & Time</th>
                            <th>Client</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td><strong>#{{ commande.id }}</strong></td>
                            <td>
                                <small>{{ commande.dateHeure ? commande.dateHeure|date('M d, Y') : '' }}<br>
                                {{ commande.dateHeure ? commande.dateHeure|date('H:i') : '' }}</small>
                            </td>
                            <td>{{ commande.client.nom }} {{ commande.client.prenom }}</td>
                            <td>
                                <small>
                                    {% for ligne in commande.ligneCommandes|slice(0, 2) %}
                                        <div>{{ ligne.quantite }}x {{ ligne.plat.nomPlat }}</div>
                                    {% endfor %}
                                    {% if commande.ligneCommandes|length > 2 %}
                                        <div class="text-muted">+{{ commande.ligneCommandes|length - 2 }} more...</div>
                                    {% endif %}
                                </small>
                            </td>
                            <td><strong>${{ commande.total|number_format(2, '.', ',') }}</strong></td>
                            <td>
                                <span class="badge bg-{{ commande.paymentStatus == 'PAID' ? 'success' : 'warning' }}">
                                    {{ commande.paymentMethod }}
                                </span>
                            </td>
                            <td>
                                <form method="post" action="{{ path('app_commande_update_status', {id: commande.id}) }}" class="d-inline">
                                    <select name="status" class="form-select form-select-sm" onchange="if(confirm('Update order status?')) this.form.submit(); else this.value='{{ commande.statut }}';" 
                                            style="min-width: 150px;">
                                        <option value="PENDING" {{ commande.statut == 'PENDING' ? 'selected' : '' }}>‚è≥ PENDING</option>
                                        <option value="CONFIRMED" {{ commande.statut == 'CONFIRMED' ? 'selected' : '' }}>‚úì CONFIRMED</option>
                                        <option value="IN_PROGRESS" {{ commande.statut == 'IN_PROGRESS' ? 'selected' : '' }}>üç≥ IN_PROGRESS</option>
                                        <option value="READY" {{ commande.statut == 'READY' ? 'selected' : '' }}>‚úÖ READY</option>
                                        <option value="SERVED" {{ commande.statut == 'SERVED' ? 'selected' : '' }}>üçΩÔ∏è SERVED</option>
                                        <option value="CANCELLED" {{ commande.statut == 'CANCELLED' ? 'selected' : '' }}>‚ùå CANCELLED</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_commande_show', {id: commande.id}) }}" 
                                       class="btn btn-sm btn-info" 
                                       title="View Details"
                                       data-bs-toggle="tooltip">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_commande_edit', {id: commande.id}) }}" 
                                       class="btn btn-sm btn-warning" 
                                       title="Edit Order"
                                       data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-danger" 
                                            title="Delete Order"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal{{ commande.id }}">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteModal{{ commande.id }}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Confirm Delete</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="mb-2"><strong>Are you sure you want to delete this order?</strong></p>
                                                <div class="alert alert-warning">
                                                    <strong>Order #{{ commande.id }}</strong><br>
                                                    Date: {{ commande.dateHeure|date('M d, Y - H:i') }}<br>
                                                    Total: ${{ commande.total|number_format(2, '.', ',') }}<br>
                                                    Status: {{ commande.statut }}
                                                </div>
                                                <p class="text-danger small mb-0">‚ö†Ô∏è This action cannot be undone!</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form method="post" action="{{ path('app_commande_delete', {id: commande.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Yes, Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <div class="text-muted">
                                    <h5>No orders found</h5>
                                    <p>Try adjusting your filters or create a new order</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification for Success Messages -->
{% for message in app.flashes('success') %}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle"></i> {{ message }}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
{% endfor %}

{% for message in app.flashes('error') %}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div class="toast show align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-exclamation-triangle"></i> {{ message }}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
{% endfor %}

<script>
    // Auto-hide toasts after 3 seconds
    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        toastElList.forEach(function(toastEl) {
            setTimeout(function() {
                var toast = bootstrap.Toast.getInstance(toastEl);
                if (toast) {
                    toast.hide();
                }
            }, 3000);
        });
    });
</script>
{% endblock %}
