{% extends 'base.html.twig' %}

{% block title %}Edit Order #{{ commande.id }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Order #{{ commande.id }}</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-calendar-event"></i> Date & Time *</label>
                            {{ form_widget(form.dateHeure, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                            <small class="form-text text-muted">Order date and time</small>
                            {{ form_errors(form.dateHeure) }}
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-person"></i> Client *</label>
                            {{ form_widget(form.client, {'attr': {'class': 'form-select'}}) }}
                            <small class="form-text text-muted">Customer information</small>
                            {{ form_errors(form.client) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-info-circle"></i> Status *</label>
                            <select name="{{ form.statut.vars.full_name }}" id="{{ form.statut.vars.id }}" class="form-select">
                                <option value="PENDING" {{ commande.statut == 'PENDING' ? 'selected' : '' }}>‚è≥ PENDING</option>
                                <option value="CONFIRMED" {{ commande.statut == 'CONFIRMED' ? 'selected' : '' }}>‚úì CONFIRMED</option>
                                <option value="IN_PROGRESS" {{ commande.statut == 'IN_PROGRESS' ? 'selected' : '' }}>üç≥ IN_PROGRESS</option>
                                <option value="READY" {{ commande.statut == 'READY' ? 'selected' : '' }}>‚úÖ READY</option>
                                <option value="SERVED" {{ commande.statut == 'SERVED' ? 'selected' : '' }}>üçΩÔ∏è SERVED</option>
                                <option value="CANCELLED" {{ commande.statut == 'CANCELLED' ? 'selected' : '' }}>‚ùå CANCELLED</option>
                            </select>
                            <small class="form-text text-muted">Current order status</small>
                            {{ form_errors(form.statut) }}
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-currency-dollar"></i> Total Amount *</label>
                            {{ form_widget(form.total, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
                            <small class="form-text text-muted">Total order amount</small>
                            {{ form_errors(form.total) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-clock"></i> Estimated Time (minutes)</label>
                            {{ form_widget(form.estimatedTime, {'attr': {'class': 'form-control', 'min': '5', 'step': '5'}}) }}
                            <small class="form-text text-muted">Preparation time estimate</small>
                            {{ form_errors(form.estimatedTime) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-journal-text"></i> Notes / Chef Instructions</label>
                        <textarea class="form-control" rows="3" placeholder="Add special instructions or notes for the chef..." name="notes"></textarea>
                        <small class="form-text text-muted">Optional: Special requests or cooking instructions</small>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-between align-items-center flex-wrap">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Order
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">* Required fields</small>
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2"><strong>Are you sure you want to delete this order?</strong></p>
                <div class="alert alert-warning">
                    <strong>Order #{{ commande.id }}</strong><br>
                    Date: {{ commande.dateHeure|date('M d, Y - H:i') }}<br>
                    Total: ${{ commande.total|number_format(2, '.', ',') }}<br>
                    Status: {{ commande.statut }}
                </div>
                <p class="text-danger small mb-0">‚ö†Ô∏è This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Cancel
                </button>
                {{ include('commande/_delete_form.html.twig', {'btn_class': 'btn btn-danger'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
