{% extends 'base.html.twig' %}

{% block title %}Order #{{ commande.id }} - Details{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            {# Order Details Card #}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-receipt"></i> Order #{{ commande.id }}</h4>
                    {% if commande.statut == 'CONFIRMED' %}
                        <span class="badge bg-success fs-6">{{ commande.statut }}</span>
                    {% elseif commande.statut == 'IN_PROGRESS' %}
                        <span class="badge bg-warning fs-6">{{ commande.statut }}</span>
                    {% elseif commande.statut == 'READY' %}
                        <span class="badge bg-info fs-6">{{ commande.statut }}</span>
                    {% elseif commande.statut == 'SERVED' %}
                        <span class="badge bg-secondary fs-6">{{ commande.statut }}</span>
                    {% elseif commande.statut == 'CANCELLED' %}
                        <span class="badge bg-danger fs-6">{{ commande.statut }}</span>
                    {% else %}
                        <span class="badge bg-warning fs-6">{{ commande.statut }}</span>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-calendar-event"></i> Order Date & Time</h6>
                            <p class="fs-5">{{ commande.dateHeure ? commande.dateHeure|date('F d, Y - H:i') : '' }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-person"></i> Client Information</h6>
                            <p class="fs-5">{{ commande.client.nom }} {{ commande.client.prenom }}</p>
                            <p class="text-muted small">{{ commande.client.email }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-credit-card"></i> Payment Method</h6>
                            <p>
                                {% if commande.paymentMethod == 'CARD' %}
                                    <span class="badge bg-primary">üí≥ Card</span>
                                {% else %}
                                    <span class="badge bg-warning">üíµ Cash</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-check-circle"></i> Payment Status</h6>
                            <p>
                                <span class="badge bg-{{ commande.paymentStatus == 'PAID' ? 'success' : 'warning' }}">
                                    {{ commande.paymentStatus }}
                                </span>
                            </p>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3"><i class="bi bi-list-ul"></i> Order Items</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in commande.ligneCommandes %}
                                <tr>
                                    <td>{{ ligne.plat.nomPlat }}</td>
                                    <td class="text-center">{{ ligne.quantite }}</td>
                                    <td class="text-end">${{ ligne.plat.prix|number_format(2, '.', ',') }}</td>
                                    <td class="text-end">${{ (ligne.plat.prix * ligne.quantite)|number_format(2, '.', ',') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><strong class="fs-5 text-success">${{ commande.total|number_format(2, '.', ',') }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            {# Action Buttons Bar #}
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex gap-2 justify-content-between align-items-center flex-wrap">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete Order
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            {# Quick Actions Card #}
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_customer_order_ticket', {id: commande.id}) }}" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-receipt"></i> View Receipt
                        </a>
                        <a href="{{ path('app_customer_order_ticket_download', {id: commande.id}) }}" class="btn btn-outline-success">
                            <i class="bi bi-download"></i> Download PDF
                        </a>
                    </div>
                </div>
            </div>

            {# Order Summary Card #}
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Order Number</small>
                        <h4 class="text-primary">#{{ commande.id }}</h4>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Total Items</small>
                        <h4>{{ commande.ligneCommandes|length }}</h4>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Total Amount</small>
                        <h4 class="text-success">${{ commande.total|number_format(2, '.', ',') }}</h4>
                    </div>
                    <div>
                        <small class="text-muted">Current Status</small>
                        <h5>
                            {% if commande.statut == 'CONFIRMED' %}
                                <span class="badge bg-success">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'IN_PROGRESS' %}
                                <span class="badge bg-warning">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'READY' %}
                                <span class="badge bg-info">{{ commande.statut }}</span>
                            {% elseif commande.statut == 'SERVED' %}
                                <span class="badge bg-secondary">{{ commande.statut }}</span>
                            {% else %}
                                <span class="badge bg-warning">{{ commande.statut }}</span>
                            {% endif %}
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2"><strong>Are you sure you want to delete this order?</strong></p>
                <div class="alert alert-warning">
                    <strong>Order #{{ commande.id }}</strong><br>
                    Date: {{ commande.dateHeure|date('M d, Y - H:i') }}<br>
                    Total: ${{ commande.total|number_format(2, '.', ',') }}<br>
                    Status: {{ commande.statut }}
                </div>
                <p class="text-danger small mb-0">‚ö†Ô∏è This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Cancel
                </button>
                {{ include('commande/_delete_form.html.twig', {'btn_class': 'btn btn-danger'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
