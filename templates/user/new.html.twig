{% extends 'base.html.twig' %}

{% block title %}Create New User{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> Create New User</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person"></i> {{ form_label(form.prenom) }}
                        </label>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Enter first name'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person"></i> {{ form_label(form.nom) }}
                        </label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter last name'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-envelope"></i> {{ form_label(form.email) }}
                        </label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'user@example.com'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-lock"></i> {{ form_label(form.password) }}
                        </label>
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Enter secure password'}}) }}
                        {{ form_errors(form.password) }}
                        <small class="form-text text-muted">Minimum 6 characters</small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-shield-check"></i> {{ form_label(form.role) }}
                        </label>
                        {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.role) }}
                        <small class="form-text text-muted">
                            <strong>Role Descriptions:</strong><br>
                            • <strong>Admin:</strong> Full system access<br>
                            • <strong>Cashier:</strong> Views pending orders, processes payments<br>
                            • <strong>Chef:</strong> Views paid orders, updates cooking status<br>
                            • <strong>Waiter:</strong> Views ready orders, serves customers<br>
                            • <strong>Client:</strong> Can place orders as customer
                        </small>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Create User
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
