{% extends 'base.html.twig' %}

{% block title %}User Details - {{ user.fullName }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-person-circle"></i> User Details</h4>
                    {% set role = user.roles[0] ?? 'ROLE_CLIENT' %}
                    {% if role == 'ROLE_ADMIN' %}
                        <span class="badge bg-danger fs-6"><i class="bi bi-shield-check"></i> Admin</span>
                    {% elseif role == 'ROLE_CASHIER' %}
                        <span class="badge bg-light text-dark fs-6"><i class="bi bi-cash-stack"></i> Cashier</span>
                    {% elseif role == 'ROLE_CHEF' %}
                        <span class="badge bg-warning fs-6"><i class="bi bi-fire"></i> Chef</span>
                    {% elseif role == 'ROLE_WAITER' %}
                        <span class="badge bg-info fs-6"><i class="bi bi-person-badge"></i> Waiter</span>
                    {% else %}
                        <span class="badge bg-secondary fs-6"><i class="bi bi-person"></i> Client</span>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-hash"></i> User ID</h6>
                            <p class="fs-5">#{{ user.id }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-person"></i> Full Name</h6>
                            <p class="fs-5">{{ user.fullName }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-envelope"></i> Email</h6>
                            <p class="fs-5">{{ user.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted"><i class="bi bi-shield-check"></i> Role</h6>
                            <p class="fs-5">
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="badge bg-danger"><i class="bi bi-shield-check"></i> Admin</span>
                                    <br><small class="text-muted">Full system access</small>
                                {% elseif role == 'ROLE_CASHIER' %}
                                    <span class="badge bg-primary"><i class="bi bi-cash-stack"></i> Cashier</span>
                                    <br><small class="text-muted">Views pending orders, processes payments</small>
                                {% elseif role == 'ROLE_CHEF' %}
                                    <span class="badge bg-warning"><i class="bi bi-fire"></i> Chef</span>
                                    <br><small class="text-muted">Views paid orders, updates cooking status</small>
                                {% elseif role == 'ROLE_WAITER' %}
                                    <span class="badge bg-info"><i class="bi bi-person-badge"></i> Waiter</span>
                                    <br><small class="text-muted">Views ready orders, serves customers</small>
                                {% else %}
                                    <span class="badge bg-secondary"><i class="bi bi-person"></i> Client</span>
                                    <br><small class="text-muted">Can place orders as customer</small>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit User
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete User
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2"><strong>Are you sure you want to delete this user?</strong></p>
                <div class="alert alert-warning">
                    <strong>{{ user.fullName }}</strong><br>
                    Email: {{ user.email }}<br>
                    Role: {{ role }}
                </div>
                <p class="text-danger small mb-0">⚠️ This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Cancel
                </button>
                <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
