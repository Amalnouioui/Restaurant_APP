{% extends 'base.html.twig' %}

{% block title %}Login - Restaurant{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">üîê Login</h3>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> {{ message }}
                    </div>
                    {% endfor %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" name="_username" value="{{ last_username }}" placeholder="your@email.com" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="_password" placeholder="Enter your password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>

                    <div class="text-center my-3">
                        <span class="text-muted">OR</span>
                    </div>

                    <form method="post" action="{{ path('app_login') }}">
                        <input type="hidden" name="_username" value="walkin@restaurant.local">
                        <input type="hidden" name="_password" value="walkin123">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="bi bi-person-walking"></i> Continue as Walk-in Customer
                            </button>
                        </div>
                        <small class="text-muted d-block text-center mt-2">No registration required</small>
                    </form>

                    <hr>

                    <p class="text-center">Don't have an account? 
                        <a href="{{ path('app_register') }}" class="text-primary fw-bold">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
