{% extends 'base.html.twig' %}

{% block title %}Register - Restaurant{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">ðŸ‘¤ Create Account</h3>
                </div>
                <div class="card-body p-4">
                    {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> {{ message }}
                    </div>
                    {% endfor %}

                    <form method="post" action="{{ path('app_register') }}">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Account Type</label>
                            <select name="account_type" class="form-select" required>
                                <option value="">-- Select Account Type --</option>
                                <option value="client">Client (Customer - Immediate Access)</option>
                                <option value="staff">Staff (Requires Admin Approval)</option>
                            </select>
                            <small class="form-text text-muted">
                                <strong>Client:</strong> Can order immediately<br>
                                <strong>Staff:</strong> Admin must assign role before access
                            </small>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" name="prenom" value="{{ prenom ?? '' }}" placeholder="John" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" name="nom" value="{{ nom ?? '' }}" placeholder="Doe" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" name="email" value="{{ email ?? '' }}" placeholder="your@email.com" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Minimum 6 characters" required>
                            <small class="text-muted">Must be at least 6 characters</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" name="confirm_password" placeholder="Re-enter password" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Create Account</button>
                        </div>
                    </form>

                    <hr>

                    <p class="text-center">Already have an account? 
                        <a href="{{ path('app_login') }}" class="text-primary fw-bold">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
